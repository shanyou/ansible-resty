#!/bin/bash
# build resty from local with given prefix
#
# created: 2016-02-04
# author: shanyou
#

PREFIX={{ resty.prefix }}
pushd {{ resty.srcdir }}/openresty-{{resty.version}}
./configure --prefix=$PREFIX \
--add-module=./bundle/naxsi-untagged-afabfc163946baa8036f/naxsi_src/ \
--with-http_realip_module \
--with-pcre-jit \
--with-cc-opt="-I/usr/local/include" \
--with-ld-opt="-L/usr/local/lib" \
--with-http_stub_status_module \
--add-module=./bundle/nginx-http-sysguard/
make && make install
popd
